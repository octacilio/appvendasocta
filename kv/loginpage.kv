<LoginPage>:

    FloatLayout:
        canvas:
            Rectangle:
                size: self.size
                pos: self.pos
                source: "icones/bg1.png"
        Label:
            pos_hint: {"right":0.9, "top": 0.9}
            size_hint: 0.8, 0.2
            bold: True
            # faz colocar cores nas palavras do text
            markup: True
            text: "Controle de Vendas [color=#00CFDB]Octa[/color]"
            id: id_label_loginpage

        TextInput:
            id: email
            hint_text: 'E-mail'
            pos_hint: {"right":0.9, "top": 0.7}
            size_hint: 0.8, 0.1

        TextInput:
            id: senha
            password: True
            hint_text: 'Senha'
            pos_hint: {"right":0.9, "top": 0.55}
            size_hint: 0.8, 0.1

        Label:
            id: mensagem_login
            pos_hint: {"right":0.9, "top": 0.4}
            size_hint: 0.8, 0.1
            bold: True
            # faz colocar cores nas palavras do text
            markup: True
            text: "[color=#00CFDB]Faça seu Login[/color]"
        LabelButton:
            canvas.before:
                Color:
                    rgb: utils.get_color_from_hex('#006b7e')
                Rectangle:
                    size: self.size
                    pos: self.pos
                    source: "icones/botao.png" if self.state == 'normal' else "icones/botao_apertado.png"
            on_release: app.firebase.fazer_login(email.text, senha.text)
            text: "Faça seu Login"
            pos_hint: {"right":0.43, "top": 0.3}
            size_hint: 0.4, 0.2
        LabelButton:
            canvas.before:
                Color:
                    rgb: utils.get_color_from_hex('#006b7e')
                Rectangle:
                    size: self.size
                    pos: self.pos
                    source: "icones/botao.png" if self.state == 'normal' else "icones/botao_apertado.png"
            on_release: app.firebase.criar_conta(email.text, senha.text)
            text: "Criar Conta"
            pos_hint: {"right":0.95, "top": 0.3}
            size_hint: 0.4, 0.2
