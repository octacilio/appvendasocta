<HomePage>:

    FloatLayout:
        canvas:
            Rectangle:
                size: self.size
                pos: self.pos
                source: "icones/bg1.png"
        Label:
            canvas.before:
                Color:
                    rgb: utils.get_color_from_hex('#006b7e')
                Rectangle:
                    size: self.size
                    pos: self.pos
                    source: "icones/botao_fino.png"
            pos_hint: {"right":0.85, "top": 0.95}
            size_hint: 0.7, 0.2
            markup: True
            text: "Total de Vendas R$"
            id: label_total_vendas
        # lista de vendas
        ScrollView:
            pos_hint:{"right": 1, "top": 0.75}
            size_hint: 1, 0.63
            GridLayout:
                cols: 1
                id: lista_vendas
                spacing: 2, 2
                size_hint_y: None
                height: self.minimum_height
            #######sempre tem que passar esses 4 parametros no scrollview
                row_default_height: "90dp"
                row_force_default: True
                #agora preciso adicionar o banner aqui, pra aparecer abaixo do TotalVendas da home,
                #e temos que montar um banner(bloco) no main(python)


           # 3 botoes da homepage
        GridLayout:
            rows: 1
            pos_hint:{"right": 1, "top": 0.12}
            size_hint: 1, 0.12
            canvas:
                Color:
                    rgb: utils.get_color_from_hex('#006b7e')
                Rectangle:
                    size: self.size
                    pos: self.pos
        # 3 bot√µes da Homepage
            ImageButton:
                source: "icones/add.png"
                on_release: app.chamar_tela("adicionarvendaspage")

            ImageButton:
                source: "icones/salesman.png"
                on_release: app.chamar_tela("listarvendedorespage")
            ImageButton:
                source: "icones/settings.png"
                on_release: app.chamar_tela("ajustespage")
