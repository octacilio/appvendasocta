<fotoperfilpage>:

    FloatLayout:
        canvas:
            Rectangle:
                size: self.size
                pos: self.pos
                source: "icones/bg1.png"
        Label:
            pos_hint: {"right":0.85, "top": 1}
            size_hint: 0.7, 0.2
            bold: True
            text: "Selecione sua Foto de Perfil"
            id: id_label_fotoperfilpage
    #lista de imagens
        ScrollView:
            pos_hint: {"right": 1, "top": 0.83 }
            size_hint: 1, 1
            GridLayout:
                cols: 3
                id: lista_fotos_perfil
            #######sempre tem que passar esses 4 parametros no scrollview
                size_hint_y: None
                height: self.minimum_height
                row_default_height: "90dp"
                row_force_default: True
                spacing: 5, 5




     # botao voltar
    FloatLayout:
        pos_hint:{"right": 1, "top": 0.12}
        size_hint: 1, 0.12
        canvas:
            Color:
                rgb: utils.get_color_from_hex('#006b7e')
            Rectangle:
                size: self.size
                pos: self.pos
        ImageButton:
            pos_hint:{"right": 0.2, "top": 0.9}
            size_hint: 0.2, 0.8
            source: "icones/voltar.png"
            on_release: app.chamar_tela("homepage")
